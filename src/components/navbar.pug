include user_selector

mixin navbar (props = {})
    nav
        section
            a.nav-title(href=props.homepage || '/')= props.name
            ul.nav-list.float-right
                for item in props.navItems
                    if item.type == 'user_selector'
                        +user_selector_link(props)
                    else
                        li.nav-item
                            a(href=item.href)= item.name